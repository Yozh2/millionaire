{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@engine": ["src/engine"],
      "@engine/*": ["src/engine/*"],
      "@games": ["src/games"],
      "@games/*": ["src/games/*"],
      "@app": ["src/app"],
      "@app/*": ["src/app/*"],
      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],
      "@public": ["public"],
      "@public/*": ["public/*"]
    },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "types": ["vitest/globals", "vite/client", "react", "react-dom", "@testing-library/jest-dom"]
  },
  "include": ["src", "*.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
